{
    "variables": {
      "default_format": "\\medskip\\mydefaultsize",
      "section_header": "\\section*{#CONTENT#}",
      "subsection_header": "\\subsection*{#CONTENT#}"
    },
    "base_commands": {
      "text_base": {
        "description": "Base for text-containing commands",
        "parameters": {
          "vspace": {
            "description": "Equal vertical space to add above and below (e.g. '1em', '10pt', '0.5in')",
            "type": "string",
            "default": "0pt"
          }
        },
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n$variables.default_format$\n#CONTENT#\\par#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "container_base": {
        "description": "Base for commands that contain other elements",
        "parameters": {
          "vspace": {
            "description": "Equal vertical space to add above and below (e.g. '1em', '10pt', '0.5in')",
            "type": "string",
            "default": "0pt"
          },
          "label": {
            "description": "Reference label",
            "type": "string",
            "default": ""
          }
        },
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n#CONTENT##IF label!=\"\"#\\label{#label#}#ENDIF##IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      }
    },
    "commands": {
      "problem": {
        "extends": "text_base",
        "description": "Problem section",
        "parameters": {
          "title": {
            "description": "Problem title",
            "default": ""
          },
          "bold": {
            "type": "boolean",
            "description": "Whether to bold the problem statement",
            "default": false
          }
        },
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n$variables.default_format$\n\\section*{#title#}\n#CONTENT#\\par#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "text": {
        "extends": "text_base",
        "description": "Text block",
        "parameters": {
          "indent": {
            "type": "float",
            "description": "Left indentation in em units",
            "default": 0.0
          }
        }
      },
      "question": {
        "extends": "text_base",
        "description": "Question text"
      },
      "bullet": {
        "extends": "text_base",
        "description": "Bullet point item",
        "parameters": {
          "indent": {
            "type": "float",
            "description": "Left indentation in em units",
            "default": 1.0
          },
          "bullet_style": {
            "type": "string",
            "description": "Style of bullet point",
            "default": "â€¢"
          }
        },
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n$variables.default_format$\n\\begin{itemize}\n\\item #CONTENT#\n\\end{itemize}#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "enum": {
        "extends": "text_base",
        "description": "Enumerated list item",
        "parameters": {
          "indent": {
            "type": "float",
            "description": "Left indentation in em units",
            "default": 1.0
          }
        },
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n$variables.default_format$\n\\item #CONTENT##IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "image": {
        "extends": "container_base",
        "description": "Image insertion",
        "parameters": {
          "file": {
            "description": "Image filename",
            "type": "string",
            "required": true
          },
          "width": {
            "description": "Image width as fraction of text width",
            "type": "number",
            "default": 0.8,
            "min": 0.1,
            "max": 1.0
          },
          "caption": {
            "description": "Image caption",
            "type": "string",
            "default": ""
          }
        },
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n\\begin{figure}[htbp]\n\\centering\n\\includegraphics[width=#width#\\textwidth]{#file#}\n#IF caption!=\"\"#\\caption{#caption#}#ENDIF#\n#IF label!=\"\"#\\label{#label#}#ENDIF#\n\\end{figure}#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "eq": {
        "extends": "container_base",
        "description": "Equation block",
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n\\[\n#CONTENT#\n\\]#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "align": {
        "extends": "container_base",
        "description": "Aligned equations block",
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n\\begin{align*}\n#CONTENT#\n\\end{align*}#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "answer": {
        "extends": "text_base",
        "description": "Answer section",
        "parameters": {
          "color": {
            "description": "Answer color",
            "type": "string",
            "default": "red"
          }
        },
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n$variables.default_format$\n\\textcolor{#color#}{\\textbf{Answer:} #CONTENT#}\\par#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "solution": {
        "extends": "text_base",
        "description": "Solution section",
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n\\textbf{Solution:}\n#CONTENT#\\par#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "box": {
        "extends": "container_base",
        "description": "Colored box",
        "parameters": {
          "color": {
            "description": "Background color",
            "default": "white"
          }
        },
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n\\begin{mdframed}[backgroundcolor=#color#]\n#CONTENT#\n\\end{mdframed}#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "table": {
        "extends": "container_base",
        "description": "Simple table",
        "parameters": {
          "columns": {
            "description": "Column alignment",
            "type": "string",
            "default": "lll"
          },
          "caption": {
            "description": "Table caption",
            "type": "string",
            "default": ""
          }
        },
        "latex_template": "#IF vspace!=\"0pt\"#\\vspace{#vspace#}#ENDIF#\n\\begin{table}[htbp]\n\\centering\n\\begin{tabular}{#columns#}\n#CONTENT#\n\\end{tabular}\n#IF caption!=\"\"#\\caption{#caption#}#ENDIF#\n#IF label!=\"\"#\\label{#label#}#ENDIF#\n\\end{table}#IF vspace!=\"0pt\"#\n\\vspace{#vspace#}#ENDIF#"
      },
      "equation": {
        "display": {
          "type": "boolean",
          "description": "Whether to render as display equation",
          "default": true
        }
      }
    }
  }